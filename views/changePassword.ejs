<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/login.css' />
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>


<body style="background-color: #1F3750;">
  <div class="container login-page">
    <div class="card text-center">
      <!-- User Views -->
      <div class="view" id="admin">
        <div class="card-body">
          <div class="login-body-top">
            <div class="change-password-text">
              <h5 class="card-title">CHANGE PASSWORD</h5>
              <p>Change your password on your first login.</p>
            </div>
            <span>
              <img src="/assets/admin-logo.png" />
            </span>
          </div>

          <form action="/auth/change-password" class="login-form" method="post">
            <div class="form-group">
              <label for="email">EMAIL</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="form-group">
              <label for="password">PASSWORD</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
              <label for="newPassword">NEW PASSWORD</label>
              <input type="password" class="form-control" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
              <label for="confirmNewPassword">CONFIRM NEW PASSWORD</label>
              <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" required>
            </div>
            <div class="button-div">
              <input class="btn btn-outline-primary login-btn" type="submit" value="Change Password">
            </div>
            <%- include('./partials/messages') %>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="/javascripts/userChange.js"></script>
  <script src="/javascripts/linkActive.js"></script>
</body>

</html>
