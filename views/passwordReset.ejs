<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/login.css' />
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>


<body style="background-color: #1F3750;">
  <div class="container login-page">
    <div class="card text-center">
      <!-- User Views -->
      <div class="view" id="admin">
        <div class="card-body">
            <div class="login-body-top">
                <h5 class="card-title">PASSWORD RESET</h5>
                <span>
                    <!-- <i class="fa fa-angle-left"></i> -->
                    <img src="/assets/admin-logo.png" />
                    <!-- <i class="fa fa-angle-right"></i> -->
                </span>
            </div>
            <form action="/pwdReset/passwordTknVerify" class="login-form" method="post">
                <div class="form-group">
                    <label for="pwsToken">TOKEN</label>
                    <input type="text" class="form-control" id="pwsToken" name="rstPwsTkn"  required>
                </div>
                <div class="form-group">
                    <label for="nwPassword">NEW PASSWORD</label>
                    <input type="password" class="form-control" id="nwPassword" name="nwPwd"  required>
                </div>
                <div class="form-group">
                    <label for="cnwPassword">CONFIRM NEW PASSWORD</label>
                    <input type="password" class="form-control" id="cnwPassword" name="cnwPwd"  required>
                </div>
                <div class="button-div">
                    <input class="btn btn-outline-primary login-btn" type="submit" value="Reset Password">
                </div>
                <%- include('./partials/messages') %>
            </form>
        </div>
    </div>
    </div>
  </div>

  <script src="/javascripts/userChange.js"></script>
  <script src="/javascripts/linkActive.js"></script>
</body>

</html>